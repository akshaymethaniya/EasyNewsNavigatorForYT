<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:scrollbars="vertical"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape1"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:text="GUJARATI"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_height="50dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeStepGranularity="2sp" />
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:scrollbars="horizontal"
        android:scrollbarThumbHorizontal="@android:color/darker_gray"
        >
    <LinearLayout
        android:id="@+id/gujaratiChannelsFlexLayout"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/shape"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/tv9Channel"
            android:layout_width="150dp"
            app:layout_maxWidth="400dp"
            app:layout_minWidth="150dp"
            app:layout_minHeight="150dp"
            app:layout_maxHeight="400dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:focusable="true"
            android:src="@mipmap/tv9logo"
            android:padding="7dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="TV9" />
        <ImageView
            android:id="@+id/abpAsmitaChannel"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_maxWidth="400dp"
            app:layout_minWidth="150dp"
            app:layout_minHeight="150dp"
            app:layout_maxHeight="400dp"
            android:src="@mipmap/abpasmitalogo"
            android:layout_margin="10dp"
            android:padding="7dp"
            android:accessibilityTraversalAfter="@id/tv9Channel"
            android:background="?android:attr/selectableItemBackground"
            android:focusable="true"
            android:contentDescription="ABP Asmita" />
        <ImageView
            android:id="@+id/sandeshChannel"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_maxWidth="400dp"
            app:layout_minWidth="150dp"
            app:layout_minHeight="150dp"
            app:layout_maxHeight="400dp"
            android:src="@mipmap/sandeshlogo"
            android:accessibilityTraversalAfter="@id/sandeshChannel"
            android:background="?android:attr/selectableItemBackground"
            android:layout_margin="10dp"
            android:padding="7dp"
            android:focusable="true"
            android:contentDescription="Sandesh" />
        <ImageView
            android:id="@+id/gstvChannel"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_maxWidth="400dp"
            app:layout_minWidth="150dp"
            app:layout_minHeight="150dp"
            app:layout_maxHeight="400dp"
            android:src="@mipmap/gstvlogo"
            android:accessibilityTraversalAfter="@id/sandeshChannel"
            android:background="?android:attr/selectableItemBackground"
            android:layout_margin="10dp"
            android:padding="7dp"
            android:focusable="true"
            android:contentDescription="GSTV" />
        <ImageView
            android:id="@+id/news18Channel"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_maxWidth="400dp"
            app:layout_minWidth="150dp"
            app:layout_minHeight="150dp"
            app:layout_maxHeight="400dp"
            android:src="@mipmap/news18logo"
            android:accessibilityTraversalAfter="@id/gstvChannel"
            android:background="?android:attr/selectableItemBackground"
            android:layout_margin="10dp"
            android:focusable="true"
            android:padding="7dp"
            android:contentDescription="News 18" />
        <ImageView
            android:id="@+id/zee24hourChannel"
            android:layout_width="150dp"
            app:layout_maxWidth="400dp"
            app:layout_minWidth="150dp"
            app:layout_minHeight="150dp"
            app:layout_maxHeight="400dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:focusable="true"
            android:src="@mipmap/zee24hourlogo"
            android:accessibilityTraversalAfter="@id/news18Channel"
            android:padding="7dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="ZEE 24 HOUR" />
        <ImageView
            android:id="@+id/ddNewsGujaratiChannel"
            android:layout_width="150dp"
            app:layout_maxWidth="400dp"
            app:layout_minWidth="150dp"
            app:layout_minHeight="150dp"
            app:layout_maxHeight="400dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:focusable="true"
            android:src="@mipmap/ddnewsgujlogo"
            android:accessibilityTraversalAfter="@id/zee24hourChannel"
            android:padding="7dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="DD NEWS GUJARATI" />
        <ImageView
            android:id="@+id/mantvyaChannel"
            android:layout_width="150dp"
            app:layout_maxWidth="400dp"
            app:layout_minWidth="150dp"
            app:layout_minHeight="150dp"
            app:layout_maxHeight="400dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:focusable="true"
            android:src="@mipmap/mantvyalogo"
            android:accessibilityTraversalAfter="@id/ddNewsGujaratiChannel"
            android:padding="7dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="MANTVYA 24*7 NEWS" />
    </LinearLayout>
    </HorizontalScrollView>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        ads:adSize="BANNER"
        android:focusable="true"
        android:accessibilityTraversalAfter="@id/news18Channel"
        android:layout_marginTop="10dp"
        ads:adUnitId="ca-app-pub-3913368499058974/9018060140">
    </com.google.android.gms.ads.AdView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape1"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:text="HINDI"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_height="50dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeStepGranularity="2sp" />
    </LinearLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:flexWrap="wrap"
        app:flexDirection="row"
        app:justifyContent="space_evenly"
        android:paddingTop="15dp"
        >
        <ImageView
            android:id="@+id/aajTakChannel"
            android:layout_width="wrap_content"
            app:layout_maxWidth="400dp"
            app:layout_minWidth="150dp"
            app:layout_minHeight="150dp"
            app:layout_maxHeight="400dp"
            android:accessibilityTraversalAfter="@id/adView"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:focusable="true"
            android:src="@mipmap/aajtaklogo"
            android:padding="7dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="AAJ TAK" />
        <ImageView
            android:id="@+id/abpNewsChannel"
            android:layout_width="wrap_content"
            app:layout_maxWidth="400dp"
            app:layout_minWidth="150dp"
            app:layout_minHeight="150dp"
            app:layout_maxHeight="400dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:accessibilityTraversalAfter="@id/aajTakChannel"
            android:focusable="true"
            android:src="@mipmap/abpnewslogo"
            android:padding="7dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="ABP NEWS" />
        <ImageView
            android:id="@+id/republicBharatChannel"
            android:layout_width="wrap_content"
            app:layout_maxWidth="400dp"
            app:layout_minWidth="150dp"
            app:layout_minHeight="150dp"
            app:layout_maxHeight="400dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:focusable="true"
            android:accessibilityTraversalAfter="@id/abpNewsChannel"
            android:src="@mipmap/republicbharatlogo"
            android:padding="7dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="ABP NEWS" />
        <ImageView
            android:id="@+id/ndtvChannel"
            android:layout_width="wrap_content"
            app:layout_maxWidth="400dp"
            app:layout_minWidth="150dp"
            app:layout_minHeight="150dp"
            app:layout_maxHeight="400dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:focusable="true"
            android:src="@mipmap/ndtvlogo"
            android:accessibilityTraversalAfter="@id/republicBharatChannel"
            android:padding="7dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="NDTV" />
        <ImageView
            android:id="@+id/indiaTvChannel"
            android:layout_width="wrap_content"
            app:layout_maxWidth="400dp"
            app:layout_minWidth="150dp"
            app:layout_minHeight="150dp"
            app:layout_maxHeight="400dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:focusable="true"
            android:src="@mipmap/indiatvlogo"
            android:accessibilityTraversalAfter="@id/ndtvChannel"
            android:padding="7dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="IndiaTv" />
        <ImageView
            android:id="@+id/zeeNewsChannel"
            android:layout_width="wrap_content"
            app:layout_maxWidth="400dp"
            app:layout_minWidth="150dp"
            app:layout_minHeight="150dp"
            app:layout_maxHeight="400dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:focusable="true"
            android:accessibilityTraversalAfter="@id/indiaTvChannel"
            android:src="@mipmap/zeenewslogo"
            android:padding="7dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="ZEE NEWS" />
    </com.google.android.flexbox.FlexboxLayout>
</LinearLayout></ScrollView>